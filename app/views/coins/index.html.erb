<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Acronimo</th>
      <th>Url image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coins.each do |coin| %>
    <tr>
      <td><%= coin.description %></td>
      <td><%= coin.acronym %></td>
      <td>
        <img src="<%= coin.url_image %>" alt="icones" width="30" height="30" />
      </td>
      <td><%= link_to 'Exibir', coin %></td>
      <td><%= link_to 'Editar', edit_coin_path(coin) %></td>
      <td>
        <%= link_to 'Deletar', coin, method: :delete, data: { confirm: 'Deseja
        excluir?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Nova Moeda', new_coin_path %>
